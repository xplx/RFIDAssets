		AssetIoLibrary assetIoLibrary = new AssetIoLibrary();
		try {
			List<AssetInfo> list = assetInfoMapper.findByTagId(tag_id);// 查询总资产表
			for (AssetInfo assetInfo : list) {
				assetIoLibrary.setTag_Id(tag_id);
